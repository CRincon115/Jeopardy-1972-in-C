#include "stdio.h"
#include "stdlib.h"
#include "string.h"
#define CHANCE 6

void printBody(int numeroVidas, char* body) {
	printf("\tNumero de Vidas :%d\n", numeroVidas);
	switch(numeroVidas) {
		case 0: body[6] = '\\'; break;
		case 1: body[5] = '/'; break;
		case 2: body[4] = '\\'; break;
		case 3: body[3] = '|'; break;
		case 4: body[2] = '/'; break;
		case 5: body[1] = ')', body[0] = '('; break;
		default: break;
	}
	printf("\t ____________________________________________________________________________________________________________________________________________\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|_______________________|_____________________|________________________|______________________|______________________|_______________________|\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|_______________________|_____________________|________________________|______________________|______________________|_______________________|\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|_______________________|_____________________|________________________|______________________|______________________|_______________________|\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|_______________________|_____________________|________________________|______________________|______________________|_______________________|\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|_______________________|_____________________|________________________|______________________|______________________|_______________________|\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|                       |                     |                        |                      |                      |                       |\n"
	       "\t|____________________________________________________________________________________________________________________________________________|\n", body[0], body[1], body[2], body[3], body[4], body[5], body[6]);
}
int main(){

    char *body = malloc(CHANCE+1);
    int numeroVidas = 0;

    printBody(numeroVidas, body);


}
